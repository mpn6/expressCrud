extends layout

block layout-content
    div.View.WelcomeView
        h1.Banner City Records Database
        div.Message
            div.Title
                h3 IS219 Final Project
                h1 Cities Project
            span.Details Access the Web Portal
        div.NavButtons
            if isAuthenticated
                a(href="/user")
                    div.NavButton My Profile
                a(href="http://localhost:3000/api/v1/cities")
                    div.NavButton View Records
                a(href="/logout")
                    div.NavButton Logout
            else
                a(href="/login")
                    div.NavButton Log in
